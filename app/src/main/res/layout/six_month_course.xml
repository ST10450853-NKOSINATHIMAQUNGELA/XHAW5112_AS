<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/six_month_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        app:srcCompat="@drawable/domestic_and_gardening_classes" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_variablefont_wght"
        android:text="Below is a list of all available six-month courses"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="First Aid" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="Sewing" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="Landscaping" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="Life Skills" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="67dp" />

    <Button
        android:id="@+id/returnHome"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#4A00BCD4"
        android:text="Home"
        android:textColor="#BA000000" />
</LinearLayout>