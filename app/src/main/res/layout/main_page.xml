<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        app:srcCompat="@drawable/domestic_and_gardening_classes" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_variablefont_wght"
        android:text="Skills training for domestic Workers and Gardeners"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:fontFamily="@font/gowunbatang_regular"
        android:text="Empowering the Nation was established in 2018 and offers courses in Johannesburg. Hundreds of domestic workers and gardeners have been trained on both the six-month long Learnerships and six-week Short Skills Training Programmes to empower themselves and  can provide more marketable skills."
        android:textAlignment="center"
        android:textSize="14sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="47dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="84dp">

        <Button
            android:id="@+id/sixWeekButton"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#4A00BCD4"
            android:text="6-Week courses"
            android:textColor="#BA000000" />

        <Button
            android:id="@+id/sixMonthButton"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#4A00BCD4"
            android:text="6-Month courses"
            android:textColor="#BA000000" />
    </FrameLayout>

</LinearLayout>