<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        app:srcCompat="@drawable/domestic_and_gardening_classes" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_variablefont_wght"
        android:text="To apply for the courses of your choice, please fill in the information in the document below and we will calculate your total fee"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="52dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="256dp">

    </FrameLayout>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#4A00BCD4"
        android:text="Home"
        android:textColor="#BA000000" />

</LinearLayout>