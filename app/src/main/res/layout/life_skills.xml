<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        app:srcCompat="@drawable/domestic_and_gardening_classes" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_variablefont_wght"
        android:text="Life Skills"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="Fees: R1500" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="Purpose: To provide skills to navigate basic life necessities Content:" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="• Opening a bank account" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="• Basic labour law (know your rights)" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="• Basic reading and writing literacy " />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:fontFamily="@font/inriasans_bold"
        android:text="• Basic numeric literacy " />

    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#4A00BCD4"
            android:text="Home"
            android:textColor="#BA000000" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#4A00BCD4"
            android:text="back"
            android:textColor="#BA000000" />
    </FrameLayout>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="#4A00BCD4"
        android:text="Home"
        android:textColor="#BA000000" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4A00BCD4"
        android:text="back"
        android:textColor="#BA000000" />
</LinearLayout>